public Boolean companionPlants(String plant1, String plant2) {
    //code here
    Set<String> companions = new Set<String>{'lettuce-cucumbers', 'lettuce-onions', 'onions-carrots',
                                             'onions-tomatoes', 'cucumbers-lettuce', 'carrots-onions',
                                             'tomatoes-onions'};

    String pair = plant1 + '-' + plant2;

    if(companions.contains(pair)){
        return true;
    }else {
        return false;
    }
}