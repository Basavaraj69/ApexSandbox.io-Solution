public Integer nextPrime(Integer num) {
    //code here
     // Start checking from num + 1
     Integer next = num + 1 ;

      if (num == 1) {
        return 2;
    } else if (num == 2) {
        return 3;
    } else if (num == 3) {
        return 5;
    }
    
    // Keep checking each number greater than num
    while (true) {
        // Check if the current number is prime
        if (isPrime(next)) {
            // If it's prime, return it
            return next;
        }
        // Move to the next number
        next++;
    }
}

// Helper function to check if a number is prime
public Boolean isPrime(Integer num) {
    // Base case: 2 is the smallest prime number
    if (num <= 1 ) {
        return false;
    }else if(num == 2){
        return true;
    }else{
    // Check if the number is divisible by any number from 2 to sqrt(num)
    for (Integer i = 2; i < num; i++) {
        if (Math.mod(num, i) == 0) {
            // If it's divisible, it's not prime
            return false;
        }
    }
    // If it's not divisible by any number, it's prime
    return true;
    }
}
